<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" android:orientation="vertical">
    <ImageView
        android:id="@+id/activity_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:maxHeight="200dp"
        android:minHeight="200dp"
        android:src="@drawable/image"


        ></ImageView>
    <TextView
        android:id = "@+id/activity_song_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <TextView
        android:id="@+id/activity_song_artist"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <SeekBar
        android:id="@+id/activity_main_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/activity_main_rewind"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/ff"/>
        <ImageView
            android:id="@+id/activity_main_play"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="false"
            android:src="@drawable/play"/>
        <ImageView
            android:id="@+id/activity_main_pause"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/pause"/>
        <ImageView
            android:id = "@+id/activity_main_fastForward"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/rw"
            />

    </LinearLayout>
</LinearLayout>
